@page
@model CarHireWebApp.VehicleCreateModel
@using CarHireWebApp.Models

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vehicle.RegistrationMark" class="control-label"></label>
                <input asp-for="Vehicle.RegistrationMark" class="form-control" />
                <span asp-validation-for="Vehicle.RegistrationMark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.VehicleType" class="control-label"></label>
                <select asp-for="Vehicle.VehicleType" class="form-control"asp-items="Html.GetEnumSelectList<VehicleType>()"></select>
                <span asp-validation-for="Vehicle.VehicleType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Make" class="control-label"></label>
                <input asp-for="Vehicle.Make" class="form-control" />
                <span asp-validation-for="Vehicle.Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Model" class="control-label"></label>
                <input asp-for="Vehicle.Model" class="form-control" />
                <span asp-validation-for="Vehicle.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Size" class="control-label"></label>
                <select asp-for="Vehicle.Size" class="form-control" asp-items="Html.GetEnumSelectList<Size>()"></select>
                <span asp-validation-for="Vehicle.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Seats" class="control-label"></label>
                <input asp-for="Vehicle.Seats" class="form-control" />
                <span asp-validation-for="Vehicle.Seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Rate" class="control-label"></label>
                <input asp-for="Vehicle.Rate" class="form-control" />
                <span asp-validation-for="Vehicle.Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
