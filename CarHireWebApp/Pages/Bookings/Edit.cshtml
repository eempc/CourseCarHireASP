@page
@model CarHireWebApp.BookingEditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking.BookingId" />
            <div class="form-group">
                <label asp-for="Booking.DateCreated" class="control-label"></label>
                <input asp-for="Booking.DateCreated" class="form-control" />
                <span asp-validation-for="Booking.DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.UserId" class="control-label"></label>
                <select asp-for="Booking.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Booking.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.BookingStartDateTime" class="control-label"></label>
                <input asp-for="Booking.BookingStartDateTime" class="form-control" />
                <span asp-validation-for="Booking.BookingStartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.BookingEndDateTime" class="control-label"></label>
                <input asp-for="Booking.BookingEndDateTime" class="form-control" />
                <span asp-validation-for="Booking.BookingEndDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.PricePaid" class="control-label"></label>
                <input asp-for="Booking.PricePaid" class="form-control" />
                <span asp-validation-for="Booking.PricePaid" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Booking.PaymentConfirmed" /> @Html.DisplayNameFor(model => model.Booking.PaymentConfirmed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Booking.VehicleId" class="control-label"></label>
                <select asp-for="Booking.VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                <span asp-validation-for="Booking.VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
